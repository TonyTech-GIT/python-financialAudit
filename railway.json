{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicy": {
      "type": "Always",
      "maximumRetryCount": 3
    },
    "network": {
      "ports": [
        {
          "port": 8000,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthcheck": {
    "path": "/health",
    "initialDelay": 30,
    "timeout": 10,
    "interval": 60,
    "maxRetries": 3
  },
  "env": {
    "HEALTHCHECK_ENABLED": "true",
    "DISABLE_COLLECTSTATIC": "1",
    "PYTHON_VERSION": "3.10"
  }
}