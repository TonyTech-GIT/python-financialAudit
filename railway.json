{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicy": {
      "type": "Always",
      "maximumRetryCount": 3
    },
    "network": {
      "ports": [
        {
          "port": 8000,
          "protocol": "tcp"
        }
      ]
    }
  },
  
  "healthcheck": {
    "path": "/health/",
    "initialDelay": 60,
    "timeout": 30,
    "interval": 60
  }

}